<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    androidx.core.widget.NestedScrollView
    permite fazer o celular deitar
     -->

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Logado">

    <View
        android:id="@+id/user_nome_component"
        style="@style/UserIconComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/user_icone"
        style="@style/UserIcone"
        app:layout_constraintStart_toStartOf="@id/user_nome_component"
        app:layout_constraintTop_toTopOf="@id/user_nome_component"
        app:layout_constraintEnd_toStartOf="@id/text_nome_user"
        />

    <TextView
        android:id="@+id/text_nome_user"
        style="@style/TextNomeUser"
        android:text="OlÃ¡, Paulo!"
        app:layout_constraintStart_toEndOf="@id/user_icone"
        app:layout_constraintTop_toTopOf="@id/user_nome_component"
        />

    <TextView
        android:id="@+id/text_cobertura"
        style="@style/TextCobertura"
        android:text="Suas coberturas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_nome_user"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>