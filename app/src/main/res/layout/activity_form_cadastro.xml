<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    androidx.core.widget.NestedScrollView
    permite fazer o celular deitar
     -->

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FormCadastro">

    <View
        android:id="@+id/barTop"
        style="@style/BarTopComponents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_top_entrar"
        style="@style/TextBarTop"
        app:layout_constraintStart_toEndOf="@id/barTop"
        app:layout_constraintTop_toTopOf="@id/barTop"
        app:layout_constraintEnd_toEndOf="@id/barTop"
        android:text="Sobre você"
        />

    <ImageView
        android:id="@+id/arrow_left"
        style="@style/ArrowLeft"
        app:layout_constraintStart_toStartOf="@id/barTop"
        app:layout_constraintTop_toTopOf="@id/text_top_entrar"
        />

    <TextView
        android:id="@+id/frase_top"
        style="@style/fraseTop"
        android:text="Queremos saber mais \nsobre você"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barTop" />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frase_top"
        />

    <EditText
        android:id="@+id/form_text_nome"
        style="@style/EditText"
        android:layout_marginTop="70dp"
        android:hint="Nome"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/form_text_data_nasci"
        style="@style/EditText"
        android:hint="Data de nascimento"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/form_text_nome"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continuar_form"
        style="@style/BtnPrimary"
        android:text="Continuar"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintBottom_toTopOf="@id/btn_cancela_form"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancela_form"
        style="@style/BtnComum"
        android:text="Cancelar cadastro"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
